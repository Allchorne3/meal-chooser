---
layout: base.njk
pageClass: recipe
---

<article article class="article">
  <div class="container container--narrow flow">
      <h1>{{ title }}</h1>
      
      <div class="content">
        <ul>
          <li>Calories: {{ calories }}</li>
          <li>Fat: {{ fat }}</li>
          <li>Carbs: {{ carbs }}</li>
          <li>Protein: {{ protein }}</li>
        </ul>

        {{ content | safe }}
      </div>
  </div>
</article>
